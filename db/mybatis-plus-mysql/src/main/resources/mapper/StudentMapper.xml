<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.plus.mysql.mapper.StudentMapper">
    <select id="selectByStudent" resultType="com.mybatis.plus.mysql.entity.Student">
        select * from sims_student
        <where>
            <if test="studentName != null and studentName != ''">
                student_name like CONCAT('%', #{studentName}, '%')
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="birth != null and birth != ''">
                and birth = #{birth}
            </if>
        </where>
    </select>

    <select id="selectByUserName" resultType="com.mybatis.plus.mysql.entity.Student">
        select * from sims_student where student_name like CONCAT('%', #{userName}, '%')
    </select>

    <select id="selectByWrapper" resultType="com.mybatis.plus.mysql.entity.Student">
        select * from sims_student
        <where>
            ${ew.getSqlSegment()}
        </where>
    </select>
</mapper>
